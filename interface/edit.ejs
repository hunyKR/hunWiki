<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      header {
        position: relative;
        background-color: skyblue;
      }

      #go-main {
        font-size: 2em;
        color: black;
        margin-left: 30px;
      }

      .search {
        position: absolute;
        right: 0px;
        bottom: 10px;
      }

      #search-input {
        margin-right: 50px;
      }

      #editor {
        width: 100%;
        height: 500px;
        resize: none;
        font-size: large;
      }
    </style>
    <title><%= title %> - Wiki</title>
  </head>
  <body>
    <header>
      <a href="/" id="go-main">Wiki</a>
      <input type="text" class="search" id="search-input" />
      <input type="button" value="검색" class="search" onclick="search()" />
    </header>

    <h1 style="display: inline"><%= title %> - 편집</h1>
    <a href="/w/<%= title %>">이전</a>
    <textarea id="editor"><%= content %></textarea>
    <div style="position: relative">
      <input
        type="button"
        value="저장"
        style="font-size: large; position: absolute; right: 5px"
        onclick="edit()"
      />
      <input
        type="text"
        placeholder="편집 요약"
        style="font-size: large; position: absolute; left: 5px; width: 35%"
        id="summary"
      />
    </div>
  </body>
  <script src="
  https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js
  "></script>
  <script>
    const searchInput = $("#search-input");
    function search() {
      location.href = "/s/search?q=" + encodeURIComponent(searchInput.val());
    }

    function edit() {
      const editor = $("#editor");
      const summary = $("#summary");

      if ("<%= method %>" === "edit") {
        location.href = `/s/edit/commit?title=<%= title %>&q=${encodeURIComponent(editor.val())}&sum=${encodeURIComponent(
          summary.val()
        )}`;
      }
      if ("<%= method %>" === "create") {
        location.href = `/s/edit/create?title=<%= title %>&q=${encodeURIComponent(editor.val())}&sum=${encodeURIComponent(
          summary.val()
        )}`;
      }
    }
  </script>
</html>
